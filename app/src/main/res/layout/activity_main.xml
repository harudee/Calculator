<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/topLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:gravity="bottom"
        android:padding="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/pt_currResult"
                android:hint="현재 계산상태"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/pt_result"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:hint="숫자 입력창"
                android:textCursorDrawable="@drawable/text_cursor"
                android:textSize="30sp" />

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLayout"
        app:layout_constraintVertical_weight="1.5">

        <TableRow
            android:gravity="center"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_clear"
                android:text="C"
                android:textSize="28sp"
                android:textColor="@android:color/holo_red_light"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btn_radius"/>

            <ImageButton
                android:id="@+id/btn_recode"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btn_radius"
                app:srcCompat="@drawable/ic_recode" />

            <ImageButton
                android:id="@+id/btn_undo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btn_radius"
                app:srcCompat="@drawable/ic_undo"/>

            <ImageButton
                android:id="@+id/btn_backSpace"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btn_radius"
                app:srcCompat="@drawable/ic_backspace" />


        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_percent"
                android:text="%"
                android:textSize="28sp"
                android:textColor="@color/btn_background_green"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_parenthesis_left"
                android:text="("
                android:textSize="28sp"
                android:textColor="@color/btn_background_green"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_parenthesis_right"
                android:text=")"
                android:textSize="28sp"
                android:textColor="@color/btn_background_green"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_plus"
                android:text="+"
                android:textSize="28sp"
                android:textColor="@color/btn_background_green"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_7"
                android:text="7"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_8"
                android:text="8"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_9"
                android:text="9"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_division"
                android:text="/"
                android:textSize="28sp"
                android:textColor="@color/btn_background_green"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>


        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_4"
                android:text="4"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_5"
                android:text="5"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_6"
                android:text="6"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_multiple"
                android:text="*"
                android:textSize="28sp"
                android:textColor="@color/btn_background_green"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_1"
                android:text="1"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_2"
                android:text="2"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_3"
                android:text="3"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_minus"
                android:text="-"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/btn_background_green"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"
                app:srcCompat="@drawable/ic_menu" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num_0"
                android:text="0"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_dot"
                android:text="."
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/btn_radius"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_enter"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="="
                android:textSize="35dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_radius_green"/>

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

